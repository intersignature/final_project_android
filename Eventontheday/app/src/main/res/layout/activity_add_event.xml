<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/setAllInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/setTitle"
                android:layout_width="399dp"
                android:layout_height="63dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="399dp"
                    android:layout_height="wrap_content"
                    android:hint="Title" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/setLocation"
                android:layout_width="399dp"
                android:layout_height="63dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setTitle">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="399dp"
                    android:layout_height="wrap_content"
                    android:hint="Location" />
            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/setStartDate"
                android:layout_width="399dp"
                android:layout_height="63dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Select event start date"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setLocation" />

            <EditText
                android:id="@+id/setEndDate"
                android:layout_width="399dp"
                android:layout_height="63dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:hint="Select event end date"
                android:inputType="date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setStartDate"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/setStartTime"
                android:layout_width="399dp"
                android:layout_height="63dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:hint="Select event start time"
                android:inputType="time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setEndDate"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/setEndTime"
                android:layout_width="399dp"
                android:layout_height="63dp"
                android:hint="Select event end time"
                android:inputType="time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setStartTime"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvAlert"
                android:layout_width="80dp"
                android:layout_height="43dp"
                android:layout_marginEnd="12dp"
                android:text="Alert"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/setAlertTime"
                app:layout_constraintTop_toBottomOf="@+id/setEndTime"
                app:layout_constraintVertical_bias="0.100000024" />

            <RadioGroup
                android:id="@+id/setAlertTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setEndTime"
                app:layout_constraintVertical_bias="0.0">

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onGetAlert"
                    android:text="Before event start date 2 days (09:00)" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onGetAlert"
                    android:text="Before event start date 1 day (09:00)" />

                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onGetAlert"
                    android:text="Before event start date 1 week" />

                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onGetAlert"
                    android:text="At event start date" />

            </RadioGroup>

            <EditText
                android:id="@+id/setDetail"
                android:layout_width="399dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Detail"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setAlertTime"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/submitAddEvent"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="164dp"
                android:onClick="onSubmitAddEvent"
                android:text="Add Event"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setDetail"
                app:layout_constraintVertical_bias="0.0" />
            />
            tools:layout_editor_absoluteX="0dp" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>